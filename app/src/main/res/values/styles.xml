<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Buttons -->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Big" parent="Button">
        <item name="android:padding">17dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Text -->
    <style name="Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.LightBlack">
        <item name="android:textColor">@color/black_80</item>
    </style>

    <style name="Text.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Text.Pink">
        <item name="android:textColor">@color/primary_pink_100</item>
    </style>

    <style name="RegularBlack" parent="Text">
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="RegularGray" parent="Text.Gray">
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="Medium" parent="Text">
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="SemiboldBlack" parent="Text">
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="SemiboldLightBlack" parent="Text.LightBlack">
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="SemiboldGray" parent="Text.Gray">
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="SemiboldPink" parent="Text.Pink">
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

</resources>