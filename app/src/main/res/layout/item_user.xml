<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_user_background"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/iv_user_background"
        app:layout_constraintStart_toEndOf="@+id/iv_user_background"
        app:layout_constraintTop_toTopOf="@+id/iv_user_background">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title"
            style="@style/RegularGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="10sp"
            tools:ignore="SmallSp"
            tools:text="Имя, Фамилия" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_full_name"
            style="@style/Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="14sp"
            tools:text="Всеволод Сокур" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="@+id/iv_user_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_user_background" />

</androidx.constraintlayout.widget.ConstraintLayout>